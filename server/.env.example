# Server Environment Variables
# Copy this file to .env and fill in your values

MONGODB_URI=mongodb+srv://your-username:your-password@cluster.mongodb.net/Blog
JWT_SECRET=your-jwt-secret-key

# Optional: Email configuration
MAIL_TRAP_SMTP_HOST=sandbox.smtp.mailtrap.io
MAIL_TRAP_SMTP_PORT=2525
MAIL_TRAP_SMTP_USER=your-mailtrap-user
MAIL_TRAP_SMTP_PASS=your-mailtrap-pass

# Optional: AI features
GEMINI_API_KEY=your-gemini-api-key

# Frontend URL for CORS
FRONTEND_URL=https://your-frontend.vercel.app
